<Window x:Class="App_CompanyEmployees.Win_DepartmentEdit"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:App_CompanyEmployees"
        mc:Ignorable="d"
        Title="Редактирование департамента" Height="200" Width="400" WindowStartupLocation="CenterOwner">
    <Grid>
        <TextBox x:Name="txtBox_input" HorizontalAlignment="Left" Height="23" Margin="63,51,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="280" Text="Название выбранного департамента"/>
        <Label Content="Измените наименование департамента:" HorizontalAlignment="Left" Margin="94,20,0,0" VerticalAlignment="Top" Width="232"/>
        <Button x:Name="btn_OK" Content="ОК" HorizontalAlignment="Left" Margin="94,109,0,0" VerticalAlignment="Top" Width="75" Click="btn_OK_Click"/>
        <Button x:Name="btn_Cancel" Content="Отмена" HorizontalAlignment="Left" Margin="240,109,0,0" VerticalAlignment="Top" Width="75" Click="btn_Cancel_Click"/>
    </Grid>
</Window>
